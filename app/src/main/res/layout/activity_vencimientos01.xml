<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Vencimientos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/campo_futbol_opa"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/lblTit_Vencimientos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/lexend_bold"
        android:text="@string/txt_Tit_Vencimientos"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/txt_cuotas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/txt_lbl_Cuotas"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <ListView
                android:id="@+id/lvVencimientos"
                android:layout_width="match_parent"
                android:layout_height="234dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/txtNoVencimientos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="No hay vencimientos para mostrar"
                android:textSize="18sp"
                android:visibility="gone" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_Volver_Vencimientos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:baselineAligned="false"
        android:fontFamily="@font/open_sans"
        android:padding="10dp"
        android:text="@string/txt_btn_volver"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:backgroundTint="@color/botones" />

</LinearLayout>